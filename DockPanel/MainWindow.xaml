<Window x:Class="DockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Button DockPanel.Dock="Top" Background="LightGreen" Content="TopButton"></Button>
        <Button DockPanel.Dock="Bottom" Background="LightBlue" Content="BottomButton"></Button>
        <Button DockPanel.Dock="Left" Background="Aqua" Content="LeftButton"></Button>
        <Button DockPanel.Dock="Right" Background="Gold" Content="RightButton"></Button>
        <Button Background="LightCyan" Content="Свободное пространство" FontSize="30"></Button>
    </DockPanel>
</Window>
