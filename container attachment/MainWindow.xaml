<Window x:Class="container_attachment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:container_attachment"
        mc:Ignorable="d"
        Title="Пример компоновки" SizeToContent="WidthAndHeight">
    <DockPanel LastChildFill="True" MinWidth="400" MinHeight="300">
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Orientation="Horizontal" MinHeight="40">
            <Button Margin="5" Padding="5" Content="OK"></Button>
            <Button Margin="5" Padding="5" Content="Cancel"></Button>
        </StackPanel>
        <TextBox DockPanel.Dock="Top" Margin="5" FontSize="12" BorderBrush="LightBlue" BorderThickness="7">Something go wrong</TextBox>
    </DockPanel>
</Window>
